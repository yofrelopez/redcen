generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String      @id @default(cuid())
  email         String      @unique
  name          String?
  abbreviation  String      @unique
  passwordHash  String
  role          Role        @default(INSTITUTION)
  isActive      Boolean     @default(true)
  description   String?
  website       String?
  logo          String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  slug          String      @unique
  banner        String?
  region        String?
  province      String?
  district      String?
  address       String?
  googleMapsUrl String?
  phone         String?
  publicEmail   String?
  socialLinks   Json?
  scrapeHour    Int?        @default(6)
  notes         PressNote[]
}

model PressNote {
  id               String    @id @default(cuid())
  title            String
  slug             String    @unique
  mainImage        String?
  mainImageAlt     String?
  mainImageCaption String?
  gallery          String[]
  content          String
  summary          String?
  published        Boolean   @default(false)
  region           String?
  province         String?
  district         String?
  metaTitle        String?
  metaDescription  String?
  tags             String[]  @default([])
  views            Int       @default(0)
  scheduledFor     DateTime?
  categoryIds      String[]  @default([])
  authorId         String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  type             NoteType  @default(PRESS_NOTE)
  ogImage          String?
  sourceUrl        String?   @unique
  facebookScheduledFor DateTime? // Used for Smart Queueing
  originalPublishedAt  DateTime? // Fecha original de publicaci√≥n en la fuente externa
  author           User      @relation(fields: [authorId], references: [id])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  INSTITUTION
  JOURNALIST
  ADMIN
}

enum NoteType {
  PRESS_NOTE
  STATEMENT
  EVENT
  PODCAST
  VIDEO
  OPINION
  DOCUMENT
  ALERT
  GALLERY
  REPORT
}
